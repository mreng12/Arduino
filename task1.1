int led1 = 1;
int led2 = 2;
int led3 =3;
int sw = 5;
int buttonstate;
int x =0;


void setup() {
  pinMode(led1,OUTPUT);
  pinMode(led2,OUTPUT);
  pinMode(led3,OUTPUT);
  pinMode(sw,INPUT);
  
  

}

void loop() {
  buttonstate = digitalRead(sw);
 if (buttonstate == HIGH)
 { 
  x++;
 }
  if ( x ==0)
  {
    digitalWrite(led1,LOW);
    digitalWrite(led2,LOW);
    digitalWrite(led3,LOW);
  }
  if (x==1)
  {
    digitalWrite(led1,HIGH);
  }
  if (x==2)
  {
    digitalWrite(led1,HIGH);
    digitalWrite(led2,HIGH);
    
  }
  if (x==3)
  {
    digitalWrite(led1,HIGH);
    digitalWrite(led2,HIGH);
    digitalWrite(led3,HIGH);
  }
  if (x==4)
  {
    x =0;
  }
  

}
